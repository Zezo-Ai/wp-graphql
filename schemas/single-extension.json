{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "plugin_url": {
      "type": "string",
      "format": "uri",
      "pattern": "^(https://github\\.com/.+|https://wordpress\\.org/plugins/.+)$"
    },
    "support_url": {
      "type": "string",
      "format": "uri"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["name", "homepage"]
    }
  },
  "required": ["name", "description", "plugin_url", "support_url", "author"]
}